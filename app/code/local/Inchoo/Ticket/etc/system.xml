<?xml version="1.0"?>
<config>
    <tabs>
        <inchooticket module="inchoo_ticket">
            <label>Inchoo Ticket</label>
            <sort_order>175</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
        </inchooticket>
    </tabs>
    <sections>
        <ticket_options module="inchoo_ticket">
            <label>Ticket options</label>
            <tab>inchooticket</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <ticket_email translate="label">
                    <label>Email</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <email_notification translate="label">
                            <label>Send email notification</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <comment>Send email notification to admin on new created ticket</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_notification>
                        <ticket_email translate="label">
                            <label>Admin notification email</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-email</validate>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ticket_email>
                    </fields>
                </ticket_email>
            </groups>
        </ticket_options>
    </sections>
</config>